post_install() {
	vlicense LICENSE
	vcompletion contrib/completions/zoxide.bash bash
	vcompletion contrib/completions/zoxide.fish fish
	vcompletion contrib/completions/_zoxide zsh
	for f in man/man1/*; do
		vman $f
	done
}
